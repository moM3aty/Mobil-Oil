@model Oil.Models.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card-custom {
        background: #ffffff;
        border-radius: 20px;
        padding: 40px;
        margin: 40px auto;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
        max-width: 1100px;
    }

        .card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

    .form-title {
        font-size: 32px;
        font-weight: bold;
        color: #2c3e50;
        text-align: center;
        position: relative;
        margin-bottom: 40px;
    }

        .form-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background-color: #3498db;
            border-radius: 2px;
        }

    .form-label {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 5px;
        font-size: 15px;
    }

    input.form-control,
    select.form-control,
    textarea.form-control {
        border-radius: 12px;
        border: 1px solid #ccc;
        padding: 10px 14px;
        font-size: 15px;
        transition: 0.3s;
        background-color: #fdfdfd;
    }

        input.form-control:focus,
        select.form-control:focus,
        textarea.form-control:focus {
            border-color: #2980b9;
            box-shadow: 0 0 6px rgba(41, 128, 185, 0.3);
        }

    .form-check-label {
        font-weight: 500;
        margin-left: 8px; /* Should be margin-right for RTL, or use logical properties */
        margin-right: 8px; /* Added for RTL consistency */
        font-size: 15px;
    }

    .btn-custom {
        padding: 10px 25px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

    .btn-success {
        background-color: #3498db;
        border: none;
        padding: 10px 25px;
        border-radius: 25px;
        transition: all 0.3s ease;
        color: white; /* Ensure text color is white */
    }

        .btn-success:hover {
            background: #2980b9; /* Darker shade of blue for hover */
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
        }


    .btn-secondary {
        background-color: #7f8c8d;
        border: none;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #616a6b;
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
        }

    .btn-container {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 30px;
    }

    img#imagePreview {
        border-radius: 12px;
        border: 1px solid #ccc;
        padding: 6px;
        max-width: 100%;
        height: auto;
        transition: 0.3s ease;
        max-height: 160px;
        display: block; /* Make it block to center with margin auto if needed */
        margin-top: 10px;
    }
        /* Ensure preview is shown if Model.ImageUrl exists */
        img#imagePreview[src=""], img#imagePreview[src="#"] {
            display: none;
        }


    select.form-control {
        appearance: none;
        background-image: url("data:image/svg+xml,%3Csvg fill='gray' viewBox='0 0 24 24' width='24' height='24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M7 10l5 5 5-5z'/%3E%3C/svg%3E");
        background-repeat: no-repeat;
        background-position: left 1rem center; /* Adjusted for RTL */
        background-size: 1rem;
        padding-right: 1rem; /* Ensure space for arrow */
        padding-left: 2.5rem; /* Ensure space for arrow on the other side */
    }

    @@media (max-width: 768px) {
        .btn-container {
            flex-direction: column;
            align-items: center;
        }

        .card-custom {
            padding: 25px;
        }

        .form-title {
            font-size: 24px;
        }
    }

    #priceBeforeDiscountGroupEdit {
        transition: opacity 0.3s ease-in-out, max-height 0.3s ease-in-out;
        opacity: 0;
        max-height: 0;
        overflow: hidden;
    }

        #priceBeforeDiscountGroupEdit.visible {
            opacity: 1;
            max-height: 200px; /* Adjust as needed */
        }
</style>

<h2 class="form-title">تعديل المنتج</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card-custom">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" /> <div class="row g-3">
        <div class="col-md-6">
