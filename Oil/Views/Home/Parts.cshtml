@model List<Oil.Models.ProductType>

<section class="padding text-center">
    <div class="container text-center">
        <h2 class="section-title mb-5" data-ar="الأقسام" data-en="Parts">الأقسام</h2>
        <div class="row g-4 my-5 justify-content-center align-items-center" data-aos="fade-up" data-aos-delay="100">
            @foreach (var type in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <a asp-action="CompanyPartsByType" asp-route-id="@type.Id" class="part text-decoration-none d-flex flex-column gap-3 align-items-center">
                        <div class="inner">
                            <img src="~/imgs/@(type.ProductTypeEn.ToLower().Replace(" ", "-")).jpg" alt="image" />
                        </div>
                        <h3 class="text-capitalize"
                            data-ar="@type.ProductTypeAr"
                            data-en="@type.ProductTypeEn">
                            @type.ProductTypeAr
                        </h3>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
